<Window x:Class="DJ_WPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:DJ_WPF.Converters"
        Title="DJ WPF"
        Height="600" Width="900"
        Background="#1E1E1E"
        SizeToContent="WidthAndHeight">
    
    <DockPanel>
    <!-- Main Menu -->
    <Menu DockPanel.Dock="Top">
        <MenuItem Header="Options">
            <MenuItem Header="Scan Tags" Command="{Binding ScanTagsCommand}" />
            <MenuItem Header="Scan Songs" Command="{Binding ScanSongsCommand}" />
            <MenuItem Header="Update from Excel" Command="{Binding UpdateFromExcelCommand}" />
                <MenuItem Header="Add Score" Command="{Binding ShowAddScoreViewCommand}" />
            <MenuItem Header="Configuration" Command="{Binding ShowConfigurationViewCommand}" />
            
            </MenuItem>
    </Menu>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- Dynamic Content Area -->
            <ContentControl Grid.Row="0" Content="{Binding CurrentView}" />

            <!-- RichTextBox -->
            <RichTextBox x:Name="SongDetailsBox"
                         Grid.Row="1"
                         Margin="10"
                         Background="#333333"
                         Foreground="White"
                         FontSize="14"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Visibility="{Binding RichTextContent, Converter={StaticResource EmptyStringToVisibilityConverter}}"
                         MaxWidth="600">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding RichTextContent}" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>

        </Grid>
    </DockPanel>
</Window>
