<Window x:Class="DJ_WPF.View.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progress" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar x:Name="ProgressBar"
                     Height="30"
                     Margin="20"
                     VerticalAlignment="Center"
                     Maximum="100"
                     Value="{Binding Progress}"
                     Background="#333333"
                     Foreground="#007ACC"/>
    </Grid>
</Window>