<UserControl x:Class="DJ_WPF.View.AddScoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:DJ_WPF.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Folder:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="SelectedFolderTextBox" Width="300" Margin="10,0,0,0" Text="{Binding SelectedFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
            <Button Content="Browse..." Width="80" Margin="10,0,0,0" Command="{Binding BrowseFolderCommand}" />
        </StackPanel>

        <!-- DataGrid to display songs without MyScore values -->
        <DataGrid x:Name="SongsDataGrid"
          Grid.Row="1"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single"
          MaxWidth="800"
          ItemsSource="{Binding FilteredSongs}"
          SelectedItem="{Binding SelectedSong}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Title" Binding="{Binding Title}" Width="*" />
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" />
                <DataGridTextColumn Header="My Score" Binding="{Binding MyScore}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>




        <!-- Controls to play song and assign MyScore -->
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Play" Width="75" Margin="0,0,10,0" Command="{Binding PlayCommand}" />
                <Button Content="Pause" Width="75" Margin="0,0,10,0" Command="{Binding PauseCommand}" />
                <Button Content="Stop" Width="75" Margin="0,0,10,0" Command="{Binding StopCommand}" />


                <!-- Slider de progreso de reproducción -->
                <Slider Width="300"
            Margin="10,0,0,0"
            Minimum="0"
            Maximum="{Binding DurationInSeconds}"
            Value="{Binding ProgressInSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>


            <!-- MyScore and action buttons -->
            <StackPanel Orientation="Horizontal">
                <Label Content="MyScore:" VerticalAlignment="Center" />
                <ComboBox x:Name="MyScoreComboBox"
                  Width="150"
                  Margin="10,0,10,0"
                  ItemsSource="{Binding MyScoreOptions}"
                  SelectedItem="{Binding SelectedSong.MyScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Button x:Name="SaveButton" Content="Save" Width="100" Margin="10,0,0,0" />
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>

</UserControl>
